@model MVCBasico_ReservaJuego.Models.Juego

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Juego</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreJuego" class="control-label"></label>
                <input asp-for="NombreJuego" class="form-control" />
                <span asp-validation-for="NombreJuego" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EdadJugadores" class="control-label"></label>
                <input asp-for="EdadJugadores" class="form-control" />
                <span asp-validation-for="EdadJugadores" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantJugadoresMin" class="control-label"></label>
                <input asp-for="CantJugadoresMin" class="form-control" />
                <span asp-validation-for="CantJugadoresMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantJugadoresMax" class="control-label"></label>
                <input asp-for="CantJugadoresMax" class="form-control" />
                <span asp-validation-for="CantJugadoresMax" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <select asp-for="Categoria" class="form-control" asp-items="Html.GetEnumSelectList<Categoria>()">
                    <option selected="selected" value="">Please select</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Dificultad" class="control-label"></label>
                <select asp-for="Dificultad" class="form-control" asp-items="Html.GetEnumSelectList<Dificultad>()">
                    <option selected="selected" value="">Please select</option>
                </select>
            </div>



            <div class="form-group">
                <label asp-for="CantFichas" class="control-label"></label>
                <input asp-for="CantFichas" class="form-control" />
                <span asp-validation-for="CantFichas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
